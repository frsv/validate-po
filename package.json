{
  "name": "validate-po",
  "version": "1.0.0",
  "description": "Validate po files for string translations, correct interpolations and errors",
  "scripts": {
    "test": "jest && eslint *.js && yarn run size && yarn run spellcheck",
    "size": "size-limit",
    "spellcheck": "yaspeller *.md"
  },
  "keywords": [
    "po",
    "localization",
    "translations",
    "gettext"
  ],
  "bin": "cli.js",
  "repository": "frsv/validate-po",
  "author": "Roman Fursov <contact@frsv.me>",
  "size-limit": [
    {
      "limit": "300 B",
      "webpack": false,
      "path": "cli.js"
    }
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/__tests__/fixtures"
    ]
  },
  "license": "ISC",
  "dependencies": {
    "colors": "^1.2.3",
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.4",
    "gettext-parser": "^1.3.1"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "jest": "^22.4.3",
    "size-limit": "^0.17.0",
    "yaspeller": "^4.0.3"
  }
}
